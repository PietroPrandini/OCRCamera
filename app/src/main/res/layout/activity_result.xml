<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">


    <ImageView
        android:id="@+id/img_captured_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="@string/pic_captured"
        android:padding="20sp"
        app:layout_constraintBottom_toTopOf="@id/progress_bar"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ScrollView - author (g3) -->
    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:scrollbars="vertical"
        android:fillViewport="true">-->
        <!-- TextView - author (g2) -->
        <!--
        <TextView
            android:id="@+id/ocr_text_view"
            android:text="@string/take_photo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal|center"/>
        -->
    <!--</ScrollView>-->

    <!-- ingredients list (Francesco Pham) -->
    <ListView
        android:id="@+id/ingredients_list"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_captured_view"
        app:layout_constraintVertical_bias="1.0"></ListView>

    <TextView
        android:id="@+id/empty_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/img_captured_view">
    </TextView>

    <!-- Progress bar showing loading and extraction progress (Francesco Pham) -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:indeterminate="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_captured_view">
    </ProgressBar>

    <!-- Camera activity launcher button (Francesco Pham) -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/newPictureFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_photo_camera_24px"
        android:layout_margin="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:backgroundTint="@color/colorPrimary"/>

    <Button
        android:id="@+id/allergensButton"
        android:layout_width="47dp"
        android:layout_height="42dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>